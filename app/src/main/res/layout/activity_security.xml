<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".SettingsBlocks.SecurityActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backsec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/keyboard_arrow_left_fill0_wght400_grad0_opsz48"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/security_and_data"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAllCaps="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/pinchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_light"
        android:text="Change your PIN code"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/newpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_fiber_pin_24"
        android:drawablePadding="10dp"
        android:drawableTint="#00A6DD"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="PIN"
        android:inputType="numberPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/changepinbut"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#00A6DD"
        android:fontFamily="@font/roboto_light"
        android:text="Change" />


    <TextView
        android:id="@+id/database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_light"
        android:text="Data base"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/deleteallDB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#00A6DD"
        android:fontFamily="@font/roboto_light"
        android:text="Delete all"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>

</LinearLayout>